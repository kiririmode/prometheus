{
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 160
      },
      "no-exclamation-question-mark": false,
      "no-mix-dearu-desumasu": {
        "preferInHeader": "である",
        "preferInBody": "である",
        "preferInList": "である",
        "strict": true
      },
      "ja-no-mixed-period": false,
      "max-kanji-continuous-len": {
        "max": 8
      }
    },
    "preset-ja-spacing": {
      "ja-space-around-code": {
        "before": true,
        "after": true
      },
      "ja-space-around-link": {
        "before": false,
        "after": false
      }
    }
  }
}
